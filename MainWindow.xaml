<Window x:Class="GMIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GMIS"
        mc:Ignorable="d"
        Title="Student Group" Height="450" Width="800">
    <Grid Loaded="Grid_Loaded">
        <TextBox x:Name="searchBox" Text="" HorizontalAlignment="Left" Margin="35,31,0,0"  TextWrapping="Wrap" VerticalAlignment="Top" Width="154" Height="20" TextChanged="TextBox_TextChanged" KeyUp="TextBox_KeyUp"/>
        <ListBox x:Name="groupListbox" Margin="35,79,340,36" SelectionChanged="groupListbox_SelectionChanged"/>
        <ComboBox x:Name="classComboBox" HorizontalAlignment="Center" Margin="0,29,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="classComboBox_SelectionChanged"/>
       
        <Label Content="Search Here" HorizontalAlignment="Left" Margin="33,6,0,0" VerticalAlignment="Top"/>
        <StackPanel  x:Name="DetailsPanel" Margin="488,29,32,36">
            <StackPanel Orientation="Horizontal">
                <Label Content="Class ID: " HorizontalAlignment="Left" VerticalAlignment="Top" Width="100"/>
                <Label Content="{Binding Path=group_id}"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
